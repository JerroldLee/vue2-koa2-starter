{
  "name": "vue2-koa2-starter",
  "version": "1.0.0",
  "description": "A starter of server side render by using vue2 and koa2",
  "main": "index.js",
  "scripts": {
    "test": "eslint server/*.js client/**/*.js client/**/*.vue",
    "postinstall": "npm run build:client-dev",
    "start": "cross-env VUE_ENV=server NODE_ENV=production node server.js",
    "build": "rm -rf ./build && npm run build:client && npm run build:server && npm run build:bundle",
    "dev": "cross-env VUE_ENV=server NODE_ENV=development nodemon --watch server -x \"npm run build:server && node\" server.js",
    "build:server": "webpack --config scripts/webpack.server.js",
    "watch:server": "webpack --config scripts/webpack.server.js --watch",
    "build:client-dev": "webpack --config scripts/webpack.client.dev.js",
    "build:client": "webpack --config scripts/webpack.client.prod.js",
    "build:bundle": "webpack --config scripts/webpack.bundle.prod.js"
  },
  "author": "EGOIST <lijiayouyj@163.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JerroldLee/vue2-koa2-starter"
  },
  "dependencies": {
    "babel-runtime": "^6.22.0",
    "koa": "^2.0.0-alpha.7",
    "koa-convert": "^1.2.0",
    "koa-static-server": "^1.0.0",
    "serialize-javascript": "^1.3.0",
    "vue": "^2.1.10",
    "vue-router": "^2.1.3",
    "vue-server-renderer": "^2.1.10",
    "vue-template-compiler": "^2.1.10",
    "vuex": "^2.1.1",
    "vuex-router-sync": "^4.1.1"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^6.7.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.0",
    "eslint-config-xo-space": "^0.15.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-vue": "^1.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "koa-webpack-dev-middleware": "^1.3.0",
    "koa-webpack-hot-middleware": "^1.0.3",
    "nodemon": "^1.11.0",
    "precss": "^1.4.0",
    "url-loader": "^0.5.7",
    "vue-loader": "^10.0.2",
    "vue-style-loader": "^1.0.0",
    "webpack": "^1.14.0",
    "webpack-hot-middleware": "^2.15.0",
    "webpack-node-externals": "^1.5.4"
  }
}
